@model Microsoft.AspNetCore.Mvc.RazorPages.PageModel;

@{
	ViewData["Title"] = "Delete";
	ViewData["SubTitle"] = Model?.GetType()?.Name?.Replace("Page", string.Empty)??"Unspecified";
	Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<h4>@ViewData["SubTitle"]</h4>
<hr />
<form method="post">
	@RenderBody()

	<div class="form-group">
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-page="./Index" asp-page-handler="Index">Back to List</a>
	</div>
</form>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
